
.uni-swipe_content {
	position: relative;
	width: 100%;
	box-sizing: border-box;
	overflow: hidden;
	border-radius: 10rpx;
}
.container {
	background: #F5F5F5;
	padding-bottom: 130rpx;
}
.content {
	padding: 30rpx;
}
.edit-status {
	margin-bottom: 20rpx;
	text-align: right;
	font-size: 26rpx;
	color: #EB6100;
}
.shop-item {
	height: 230rpx;
	background-color: #ffffff;
	padding: 10rpx 20rpx;
	border-radius: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-bottom: 1px solid #f5f5f5;
}
.shop-img {
	width: 160rpx;
	height: 160rpx;
	border-radius: 10rpx;
	margin-right: 20rpx;
}
.shop-item-content {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.shop-item-title {
	font-size: 22rpx;
	margin-bottom: 10rpx;
}
.shop-item-spec {
	border-radius: 6rpx;
	background: #EEEEEE;
	padding: 6rpx;
	font-size: 23rpx;
	color: #999999;
}
.shop-item-size {
	background: #F3F0F3;
	color: #A09DA1;
	margin-right: 10rpx;
	padding: 6rpx;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	margin-bottom: 10rpx;
}
.shop-item-bottom {
	margin-top: 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.shop-num {
	height: 39rpx;
	line-height: 39rpx;
	border: 1px solid #cccccc;
	border-radius: 10rpx;
	text-align: center;
}
.reduct-btn {
	display: inline-block;
	width: 42rpx;
	border-right: 1px solid #cccccc;
}
.num {
	display: inline-block;
	width: 65rpx;
}
.add-btn {
	display: inline-block;
	width: 42rpx;
	border-left: 1px solid #cccccc;
}
.shopping-bottom {
	width: 100%;
	height: 112rpx;
	background: #ffffff;
	position: fixed;
	left: 0px;
	bottom: 0px;
	padding: 0rpx 30rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #F5F5F5;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color: #999999;
	font-size: 26rpx;
	z-index: 100;
}
.radio-icon {
	font-size: 36rpx !important;
	margin-right: 20rpx;
}
.total {
	color: #333333;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: right;
	margin-right: 20rpx;
}
.color-price {
	font-size: 32rpx;
	color: #FF4444;
	margin-left: 10rpx;
}
.pay-btn {
	width: 260rpx;
	height: 39px;
	line-height: 39px;
	text-align: center;
	color: #ffffff;
	border-radius: 30rpx;
	background: #FF162E;
	font-size: 30rpx;
}
.empty-icon {
	width: 400rpx;
	height: 332rpx;
}
.empty-space {
	font-size: 24rpx;
	color: #666666;
	margin-top: 40rpx;
}

