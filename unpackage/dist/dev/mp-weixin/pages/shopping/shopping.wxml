<view class="container"><view class="content"><block wx:if="{{total>0}}"><view class="edit-status"><block wx:if="{{isEdit}}"><text data-event-opts="{{[['tap',[['handleEdit',['$event']]]]]}}" bindtap="__e">取消</text></block><block wx:else><text data-event-opts="{{[['tap',[['handleEdit',['$event']]]]]}}" bindtap="__e">编辑</text></block></view></block><block wx:for="{{shopList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="shop-item"><view data-event-opts="{{[['tap',[['handleSelect',[index]]]]]}}" class="icon-gou" style="{{'color:'+(item.selected?'#0070CF':'#999999')+';'}}" bindtap="__e"></view><image class="shop-img" src="{{item.goodsPhotoUrl}}"></image><view class="shop-item-content"><view class="shop-item-title">{{item.name}}</view><view class="shop-item-bottom"><text class="color-price" style="margin-left:0px;">{{"￥"+item.price}}</text><view class="shop-num"><text data-event-opts="{{[['tap',[['reduceNum',[index]]]]]}}" class="reduct-btn" bindtap="__e">-</text><text class="num">{{item.quantity}}</text><text data-event-opts="{{[['tap',[['addNum',[index]]]]]}}" class="add-btn" bindtap="__e">+</text></view></view></view></view></block></view><block wx:if="{{cartList.total>0}}"><view class="shopping-bottom"><view data-event-opts="{{[['tap',[['hadleSelectAll',['$event']]]]]}}" class="icon-gou radio-icon" style="{{'color:'+(isAll?'#0070CF':'#999999')+';'}}" bindtap="__e"></view><text data-event-opts="{{[['tap',[['hadleSelectAll',['$event']]]]]}}" bindtap="__e">全选</text><block wx:if="{{isEdit}}"><view class="total"></view></block><block wx:if="{{!isEdit}}"><view class="total"><text>总价:</text><text class="color-price">{{"￥"+totalFee}}</text></view></block><block wx:if="{{isEdit}}"><view data-event-opts="{{[['tap',[['handleDelete',['$event']]]]]}}" class="pay-btn" bindtap="__e">删除</view></block><block wx:else><view data-event-opts="{{[['tap',[['confrimOrderPage',['$event']]]]]}}" class="pay-btn" bindtap="__e">结算</view></block></view></block><block wx:else><view class="empty-text"><image class="empty-icon" src="/static/empty.png" mode="widthFix"></image><view>购物车还是空的</view></view></block></view>