<view class="container"><view class="content"><view data-event-opts="{{[['tap',[['addressPage',['$event']]]]]}}" class="address" bindtap="__e"><image class="location-icon" src="/static/location.png"></image><block wx:if="{{addressItem.address_id}}"><view class="address-text"><view><text class="user-name">{{addressItem.contact_name}}</text><text>{{addressItem.contact_mobile}}</text></view><view>{{addressItem.address}}</view></view></block><block wx:else><view class="address-text">请选择收货地址</view></block><image class="edit-icon" src="/static/arrow.png" mode="widthFix"></image></view><view class="shop-message"><block wx:for="{{shopList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="shop-item"><image class="shop-img" src="{{item.goods_cover_img}}"></image><view class="shop-item-content"><view class="shop-item-title">{{item.goods_name}}</view><view class="shop-item-bottom"><text>{{"x"+item.shopNum}}</text><text class="color-price">{{"￥"+(item.goods_price||'')}}</text></view></view></view></block><view class="order-message"><text>快递</text><text class="color-active">{{"￥"+(delivery_fee||'0.00')}}</text></view><view class="order-message"><text style="font-size:32rpx;">小计:</text><text class="color-price">{{"￥"+total}}</text></view></view><view class="order-remark"><view>订单备注</view><textarea placeholder-style="color:#999999" placeholder="请填写相关备注" data-event-opts="{{[['input',[['__set_model',['','remark','$event',[]]]]]]}}" value="{{remark}}" bindinput="__e"></textarea></view></view><view class="order-bottom"><view><text>总价:</text><text class="color-price">{{"￥"+total}}</text></view><view data-event-opts="{{[['tap',[['onSubmit',['$event']]]]]}}" class="pay-btn" bindtap="__e">付款</view></view></view>