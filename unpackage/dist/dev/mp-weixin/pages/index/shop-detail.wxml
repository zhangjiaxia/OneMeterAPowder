<view class="container"><swiper class="swiper" circular autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"><block wx:for="{{goodsDetail.detailImgUrlList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><image class="banner-img" src="{{item}}"></image></swiper-item></block></swiper><view class="shop-message"><view class="shop-title">{{goodsDetail.name||''}}</view><view class="shop-price">{{"￥"+(goodsDetail.goods_price||'0.00')}}</view></view><view class="tab-list"><view class="tab-item"><image class="tab-icon" src="/static/pay-success.png"></image><text>正品保证</text></view><view class="tab-item"><image class="tab-icon" src="/static/pay-success.png"></image><text>全场包邮</text></view><view class="tab-item"><image class="tab-icon" src="/static/pay-success.png"></image><text>全场钜惠</text></view><view class="tab-item"><image class="tab-icon" src="/static/pay-success.png"></image><text>售后无忧</text></view></view><view class="detail"><view class="rich-text"><rich-text nodes="{{goodsDetail.detailInfo}}"></rich-text></view></view><view class="detail-bottom"><view class="detail-bottom-left"><view class="detail-bottom-item"><image class="share-icon" src="/static/share-icon.png"></image><view>分享</view><button class="share-btn" type="primary" open-type="share"></button></view><view class="detail-bottom-item"><image class="share-icon" src="/static/shopping-icon.png"></image><view data-event-opts="{{[['tap',[['shoppingPage',['$event']]]]]}}" bindtap="__e">购物车</view></view></view><view data-event-opts="{{[['tap',[['confrimOrderPage',['$event']]]]]}}" class="shop-btn" bindtap="__e">加入购物车</view><view data-event-opts="{{[['tap',[['confrimOrderPage',['$event']]]]]}}" class="pay-btn" bindtap="__e">立即购买</view><block wx:if="{{!userInfo}}"><button class="search-btn" open-type="getUserInfo" lang="zh_CN" data-event-opts="{{[['getuserinfo',[['getUserInfo',['$event']]]]]}}" bindgetuserinfo="__e"></button></block></view><view hidden="{{!(confirmModal)}}" class="confirm-modal"><view class="confirm-modal-content"><view class="modal-shop-message"><image class="modal-shop-img" src="{{goodsDetail.mainImgUrl}}"></image><view class="modal-shop-content"><view>{{goodsDetail.name}}</view><view class="shop-price">{{"￥"+(goodsDetail.goods_price||0)}}</view><view class="amount">{{"库存 "+(goodsDetail.goods_stock||0)+" 件"}}</view></view></view><view class="shop-item-bottom"><text>购买数量</text><view class="shop-num"><text data-event-opts="{{[['tap',[['reduceNum',['$event']]]]]}}" class="reduct-btn" bindtap="__e">-</text><text class="num">{{shopNum}}</text><text data-event-opts="{{[['tap',[['addNum',['$event']]]]]}}" class="add-btn" bindtap="__e">+</text></view></view><view class="modal-bottom"><text data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="modal-bottom-right" bindtap="__e">查看详情</text><text data-event-opts="{{[['tap',[['handleConfirm',['$event']]]]]}}" class="modal-bottom-left" bindtap="__e">确认</text></view></view></view></view>